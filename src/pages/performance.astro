---
import Footer from "../components/footer.astro";
import MainLayout from "../layouts/mainLayout.astro";
import PerformanceTable from "../components/PerformanceTable.jsx";
import { data } from "../utils/data";
---

<MainLayout />
<img
  src="/city.jpg"
  alt=""
  class="top-0 w-full z-0 h-[500px] mo:hidden xl:h-[700px]"
/>
<img src="/mo perfo.jpg" alt="" class="top-0 w-full z-0 hidden mo:block" />
<div class="w-full bg-black z-40 h-52 content-center mo:h-0">
  <div
    class="max-w-[1000px] xl:max-w-[1300px] flex justify-between items-center m-auto mo:flex-col mo:justify-center mo:space-y-10 mo:pb-10 mo:absolute mo:top-32 mo:m-auto mo:w-dvw"
  >
    <div
      class="flex-1 text-left text-white xl:self-start mo:w-full mo:text-center"
    >
      <h4 class="text-2xl m-auto font-medium mt-1">
        We employ a disciplined <br />
        approach to achieve <br /> consistent, risk-adjusted returns.
      </h4>
    </div>
    <div class="h-40 w-[2px] bg-white mo:hidden"></div>
    <div
      class="flex-1 text-center text-white self-start space-y-3 mo:w-full mo:-space-y-6"
    >
      <h4 class="text-[60px] font-semibold -mt-4 mo:text-[96px] mo:font-medium">
        2020
      </h4>
      <p class="mo:text-[20px]">Date of Foundation</p>
    </div>
    <div class="h-40 w-[2px] bg-white mo:hidden"></div>
    <div
      class="flex-1 text-center text-white self-start space-y-3 mo:w-full mo:-space-y-6"
    >
      <h4 class="text-[60px] font-semibold -mt-4 mo:text-[96px] mo:font-medium">
        $45M
      </h4>
      <p class="mo:text-[20px]">AUM</p>
    </div>
    <div class="h-40 w-[2px] bg-white mo:hidden"></div>
    <div
      class="flex-1 text-center text-white self-start space-y-3 mo:w-full mo:-space-y-6"
    >
      <h4 class="text-[60px] font-semibold -mt-4 mo:text-[96px] mo:font-medium">
        33%
      </h4>
      <p class="mo:text-[20px]">CAGR</p>
    </div>
  </div>
</div>

<!-- SECTION TABLE -->
<section class="bg-white">
  <div class="mx-auto py-12 mo:py-5 px-10 xl:max-w-[1300px] mo:px-10 xl:px-0">
    <div class="h-[2px] w-28 bg-black mb-10 mo:hidden"></div>
    <h2 class="text-3xl font-semibold mb-4 mo:hidden">
      Net Asset Values and Returns
    </h2>
    <PerformanceTable client:load data={data} />
  </div>
</section>

<Footer />

<style>
  .perfo {
    left: 50%; /* Centro relativo al contenedor */
    transform: translateX(-50%); /* Corrige el desplazamiento del 50% */
  }
</style>
