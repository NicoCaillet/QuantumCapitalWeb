  <div class="mx-auto py-12 max-w-[1000px] xl:max-w-[1300px]">
    <div class="h-[2px] w-28 bg-black mb-10"></div>
    <h2 class="text-3xl font-semibold mb-4">Net Asset Values and Returns</h2>
    <!-- Menu solo year - Esto aparece cuando una box se ha tocado -->
    <PerformanceTable client:load data={data} />
  </div>
</section>

<Footer />

<style>
  .perfo {
    left: 50%; /* Centro relativo al contenedor */
    transform: translateX(-50%); /* Corrige el desplazamiento del 50% */
  }
</style>
